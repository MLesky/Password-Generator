<HalignLabel@MDLabel>
    halign: 'left'

<Options>
    cols: 2
    size_hint: None, None
    width: '150dp'
    height: '25dp'
    margin: '150dp'

    MDCheckbox:
        size_hint: None, None
        size: '50dp', '50dp'
        pos_hint: {'center_x': .5, 'center_y': .5}

MDBoxLayout:
    orientation: 'vertical'
    md_bg_color: 'green'
    padding: ('10dp', '10dp', '10dp', '10dp')
    spacing: '10dp'

    # Header box
    MDAnchorLayout:
        anchor_y: 'top'
        MDBoxLayout:
            md_bg_color: 'white'
            size_hint: 1, None
            height: dp(60)

            MDLabel:
                text: 'PASSWORD GENERATOR'
                halign: 'center'
                color: 'green'

    # main body box
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'white'
        padding: ('20dp', '20dp', '20dp', '20dp')
        spacing: '15dp'
        adaptive_height: True

        HalignLabel:
            text: 'Include:'
            halign: 'left'

        Options:
            id: 'numbers'
            HalignLabel:
                text: 'Numbers'

        Options:
            id: 'numbers'
            HalignLabel:
                text: 'Uppercase letters'

        Options:
            id: 'numbers'
            HalignLabel:
                text: 'Symbols'

        Options:
            id: 'numbers'
            HalignLabel:
                text: 'Random Length'

        MDSlider:
            color: 'green'
            hint: True
            hint_text_color: 'green'
            thumb_color_active: 'green'
            thumb_color_inactive: 'green'
            min: 8
            max: 25
            value: 12
            step: 1
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

         MDTextField:
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            mode: 'rectangle'
            text_color_focus: 0, 0.5, 0, 1
            text_color_normal: 0, 0.5, 0, 1
            size_hint: None, None
            width: '50dp'

        MDTextField:
            hint_text: 'Password'
            halign: 'center'
            mode: 'rectangle'
            text_color_focus: 0, 0.5, 0, 1
            text_color_normal: 0.3, 0.3, 0.3, 1
            hint_text_color_focus: 0, 1, 0, 1
            line_color_normal: 0.3,0.3,0.3,1
            line_color_focus: 0, 0.5, 0, 1
            fill_color_normal: 0.3, 0.3, 0.3, 1
            fill_color_focus: 0, 1, 0, 1
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDRaisedButton:
            text: 'Generate'
            color: 'white'
            md_bg_color: 'green'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    # Footer box
    MDBoxLayout:
        md_bg_color: 'white'
        size_hint: 1, None
        height: dp(60)

        MDLabel:
            text: 'MBAH LESKY'
            halign: 'center'
            color: 'green'