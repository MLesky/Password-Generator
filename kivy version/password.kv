<HalignLabel@MDLabel>
    halign: 'left'

<Options>
    cols: 2
    size_hint: None, None
    width: '150dp'
    margin: '150dp'

    MDCheckbox:
        size_hint: None, None
        size: '50dp', '50dp'
        pos_hint: {'center_x': .5, 'center_y': .5}

MDBoxLayout:
    orientation: 'vertical'
    md_bg_color: 'green'
    padding: ('10dp', '10dp', '10dp', '10dp')
    spacing: '10dp'

    # Header box
    MDBoxLayout:
        md_bg_color: 'white'
        size_hint: 1, None
        height: dp(60)

        MDLabel:
            text: 'PASSWORD GENERATOR'
            halign: 'center'
            color: 'green'

    # main body box
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'white'
        spacing: '10dp'

        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'

            HalignLabel:
                text: 'Include:'

            Options:
                id: 'numbers'
                HalignLabel:
                    text: 'Numbers'

            Options:
                id: 'numbers'
                HalignLabel:
                    text: 'Uppercase letters'

            Options:
                id: 'numbers'
                HalignLabel:
                    text: 'Symbols'

            Options:
                id: 'numbers'
                HalignLabel:
                    text: 'Random Length'

    # Footer box
    MDBoxLayout:
        md_bg_color: 'white'
        size_hint: 1, None
        height: dp(60)

        MDLabel:
            text: 'MBAH LESKY'
            halign: 'center'
            color: 'green'